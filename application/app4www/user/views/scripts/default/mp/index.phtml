<script type="text/javascript">
    $(function () {
        $(".weui-tabbar__item").click(function () {
            var tabTarget = $(this).attr("data-target");
            $(".weui-tabbar__item").removeClass("weui-bar__item_on");
            $(this).addClass("weui-bar__item_on");

            $(".weui-tab__bd-item").removeClass("weui-tab__bd-item--active");
            $("#" + tabTarget).addClass("weui-tab__bd-item--active");
        });
    });

    $('.weui-tab__bd-item').pullToRefresh().on('pull-to-refresh', function (done) {
        var self = this;
        setTimeout(function() {
            $(self).pullToRefreshDone();
        }, 2000)
    });

    // 引入任何一个主题后，都会有一个 MiniRefresh 全局变量
    var requestDelayTime = 600;
    var miniRefresh = new MiniRefresh({
        container: '#loanRefresh',
        down: {
            callback: function() {
                setTimeout(function() {
                    // 每次下拉刷新后，上拉的状态会被自动重置
                    miniRefresh.endDownLoading(true);
                }, requestDelayTime);
            }
        },
        up: {

            callback: function() {
                // 上拉事件

                // 注意，由于默认情况是开启满屏自动加载的，所以请求失败时，请务必endUpLoading(true)，防止无限请求
                miniRefresh.endUpLoading(true);
            }
        }
    });
