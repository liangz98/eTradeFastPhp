<script type="text/javascript">
	$().ready(function() {

	});

	$(function () {
        var phOrder=$("#_orderList");
        var phProduct=$("#_productList");
        var phPartner=$("#_partnerList");
        $(phOrder).parent().css('background-color', '#f5f8fa');
        $(phOrder).prev(".etf-heading").css('background-color', '#a0cdeb');
        $(phProduct).parent().css('background-color', '#f8f8ff');
        $(phProduct).prev(".etf-heading").css('background-color', '#d8bfd8');
        $(phPartner).parent().css('background-color', '#fffafa');
        $(phPartner).prev(".etf-heading").css('background-color', '#fc9d9a');

        initList("_orderList", "listsaleorder");
        initList("_productList", "listsaleproduct");
        initList("_partnerList", "listbuyerpartner");

        // 订单
	    $(".saleOrderListBtn").click(function () {
            $(".saleOrderListBtn").addClass("selected");
            $(".purOrderListBtn").removeClass("selected");
            initList("_orderList", "listsaleorder");
        });
        $(".purOrderListBtn").click(function () {
            $(".purOrderListBtn").addClass("selected");
            $(".saleOrderListBtn").removeClass("selected");
            initList("_orderList", "listpurorder");
        });

        // 商品
        $(".saleProductListBtn").click(function () {
            initList("_productList", "listsaleproduct");
        });
        $(".purProductListBtn").click(function () {
            initList("_productList", "listpurproduct");
        });

        // 合作伙伴
        $(".buyerPartnerListBtn").click(function () {
            initList("_partnerList", "listbuyerpartner");
        });
        $(".vendorPartnerListBtn").click(function () {
            initList("_partnerList", "listvendorpartner");
        });
	});

	function initList(initObj, actionName) {
        $("#" + initObj).fadeOut().html(function () {
            $(this).load("<?php echo $this->BaseUrl();?>/index/" + actionName).fadeIn();
        });
    }

    layui.use('laydate', function() {
        var laydate = layui.laydate;

        // 直接嵌套显示
        laydate.render({
            elem: '#test-n1',
            position: 'static',
            btns: ['clear', 'now']
        });
    });
</script>
