        xAxis: [{
            type: 'category',
            data: ['01','02','03','04','05','06', '07', '08', '09', '10', '11', '12'],
            axisLine: {
                lineStyle: {
                    color: "#999"
                }
            }
        }],
        yAxis: [{
            name: '万元',
            type: 'value',
            splitNumber: 4,
            splitLine: {
                lineStyle: {
                    type: 'solid',
