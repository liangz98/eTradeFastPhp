<script type="text/javascript">
    let dataDict = {},
        userLangCode = '<?php echo $this->userLangCode; ?>',
        $resultListTable = $('#resultListTable');

	$().ready(function() {

	});

	$(function () {
        if (userLangCode === 'en_US') {
            $.extend($.fn.bootstrapTable.defaults, $.fn.bootstrapTable.locales['en-US']);
        } else {
            $.extend($.fn.bootstrapTable.defaults, $.fn.bootstrapTable.locales['zh-CN']);
        }

        // 初始化日期控件, 绑定多个
        let layDateLang = '<?php if ($this->userLangCode == "en_US") echo "en"; else echo "cn";?>';
        layui.use('laydate', function() {
            let laydate = layui.laydate;
            lay('.layDateUI').each(function(){
                laydate.render({
                    elem: this
                    ,trigger: 'click'
                    ,lang: layDateLang
                });
            });
        });

        let dataDictQuery = '/user/common/dict-ajax';
        let dictCode = ["LOAN_STATUS"];
        $.ajax({
            type: "POST",
            url: dataDictQuery,
            data: {
                dictCode: dictCode,
                langCode: '<?php echo $this->userLangCode; ?>'
            },
            dataType: "json",
            success: function (data) {
                $.data(dataDict, 'dataDict', data);

                $resultListTable.bootstrapTable({
                    classes: 'table table-no-bordered',
                    checkboxHeader: true,
                    method: 'post',
                    clickToSelect: true,
                    // 对a和button标签忽略clickToSelect事件
                    ignoreClickToSelectOn: function (element) {
                        return $.inArray(element.tagName, ['A', 'BUTTON']);
                    },
                    url: '/user/financing/financing-item-list-ajax',
                    contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                    queryParams: function(params) {
                        return {
                            limit: 120,
                            skip: 0,
                            financingID: $("#financingID").val(),
                            itemStatus: $("#itemStatus").val()
                        };
                    },
                    onLoadSuccess: function() {
                        // $resultListTable.bootstrapTable('checkAll');

                        let $resultList = $resultListTable.bootstrapTable('getData');
                        $.each($resultList, function (i, item) {
                            // alert(item['itemID']);
                            if (item['financingLoan']['loanStatus'] === '02') {
                                $resultListTable.bootstrapTable('check', i);
                            }
                        });
                        // $resultList.each(function() {
                        //     alert($(this).itemID);
                        // });

                        refreshTotal($resultListTable);
                    },
                    onCheck: function() {
                        refreshTotal($resultListTable);
                    },
                    onUncheck:function(){
                        refreshTotal($resultListTable);
                    },
                    onCheckAll: function () {
                        refreshTotal($resultListTable);
                    },
                    onUncheckAll: function () {
                        refreshTotal($resultListTable);
                    },
                    onClickRow:function(row, $element, field) {
                        // alert(JSON.stringify(row));
                    },
                    columns: [{
                        halign: 'center',
                        checkbox: true,
                        formatter: function (value, row, index) {
                            if (row.financingLoan.loanStatus !== '02') {
                                return {
                                    disabled: true
                                }
                            }
                            return value
                        }
                    }, {
                        field: 'itemNo',
                        title: '<?php echo $this->translate("项目编号"); ?>',
                        width: 220,
                        sortable: true,
                        formatter: function (value, row) {
                            if (value === undefined || value === '' || value === null) {
                                value = "";
                            }

                            let base = new Base64();
                            let resultEnCode = base.encode(row.itemID);
                            let href = "/user/financing/financing-item-view?"+resultEnCode;

                            return '<a href="' + href + '" target="_blank">' + value + '</a>';
                        }
                    }, {
                        field: 'receivableAmount',
                        title: '<?php echo $this->translate("应收账款金额"); ?>',
                        align: 'right',
                        halign: 'center',
                        valign: 'middle',
                        width: 180,
                        formatter: function (value, row) {
                            if (value === undefined || value === '' || value === null) {
                                value = "-";
                            }
                            let result = row.crnCode + ' ' + formatCurrency(value, 2);

                            let base = new Base64();
                            let resultEnCode = base.encode(row.itemID);
                            let href = "/user/financing/financing-item-view?"+resultEnCode;

                            return '<a href="' + href + '" target="_blank">' + result + '</a>';
                        }
                    }, {
                        field: 'financingAmount',
                        title: '<?php echo $this->translate("目标融资金额"); ?>',
                        align: 'right',
                        halign: 'center',
                        valign: 'middle',
                        sortable: true,
                        width: 180,
                        formatter: function (value, row) {
                            if (value === undefined || value === '' || value === null) {
                                value = "-";
                            }
                            let result = row.crnCode + ' ' + formatCurrency(value, 2);

                            let base = new Base64();
                            let resultEnCode = base.encode(row.itemID);
                            let href = "/user/financing/financing-item-view?"+resultEnCode;

                            return '<a href="' + href + '" target="_blank">' + result + '</a>';
                        }
                    }, {
                        field: 'financingLoan',
                        title: '<?php echo $this->translate("应还金额"); ?>',
                        align: 'right',
                        halign: 'center',
                        valign: 'middle',
                        sortable: true,
                        width: 180,
                        formatter: function (value, row) {
                            let result = row.crnCode + ' ' + formatCurrency(value.writeoffBalAmount + value.writeoffBalInterest + value.writeoffServiceBalCharge, 2);

                            let base = new Base64();
                            let resultEnCode = base.encode(row.itemID);
                            let href = "/user/financing/financing-item-view?"+resultEnCode;

                            return '<a href="' + href + '" target="_blank">' + result + '</a>';
                        }
                    }, {
                        field: 'actualExpiryDate',
                        title: '<?php echo $this->translate("届满日"); ?>',
                        valign: 'middle',
                        width: 180,
                        formatter: function (value, row) {
                            let base = new Base64();
                            let resultEnCode = base.encode(row.itemID);
                            let href = "/user/financing/financing-item-view?"+resultEnCode;

                            if (value === undefined || value === '' || value === null) {
                                if (row.expiryDate === undefined || row.expiryDate === '' || row.expiryDate === null) {
                                    return "";
                                } else {
                                    return '<a href="' + href + '" target="_blank">' + new Date(row.expiryDate).format("yyyy-MM-dd") + '</a>';
                                }
                            } else {
                                return '<a href="' + href + '" target="_blank">' + new Date(value).format("yyyy-MM-dd") + '</a>';
                            }
                        }
                    }, {
                        field: 'itemStatus',
                        title: '<?php echo $this->translate("项目状态"); ?>',
                        valign: 'middle',
                        width: 120,
                        formatter: function (value, row) {
                            let loanStatus = row.financingLoan.loanStatus;
                            if (loanStatus === undefined || loanStatus === '' || loanStatus === null) {
                                loanStatus = "-";
                            }
                            let result = '';
                            let data = $.data(dataDict, 'dataDict');

                            $.each(data, function (key, item) {
                                if (key === 'LOAN_STATUS') {
                                    $.each(item, function (i, dict) {
                                        if (dict.code === loanStatus) {
                                            result = dict.name;
                                        }
                                    });
                                }
                            });

                            let base = new Base64();
                            let resultEnCode = base.encode(row.itemID);
                            let href = "/user/financing/financing-item-view?"+resultEnCode;

                            return '<a href="' + href + '" target="_blank">' + result + '</a>';
                        }
                    }, {
                        title: '<?php echo $this->translate("operation"); ?>',
                        valign: 'middle',
                        formatter: function (value, row, index) {
                            let base = new Base64();
                            let resultEnCode = base.encode(row.itemID);
                            let result = '';
                            if (row.financingLoan.loanStatus && row.financingLoan.loanStatus === '02') {
                                let href = "/user/freight/freight-loan-payment?"+resultEnCode;
                                let str = "<?php echo $this->translate('还款');?>";
                                result += '<a href="' + href + '" style="color: #337ab7">' + str + '</a>';
                            }

                            return result;
                        }
                    }]
                });


                let $titleOptions = $(".title-options");
                $titleOptions.find("button").click(function () {
                    let dataType = $(this).attr("data-type");
                    $("button[data-type='" + dataType + "']").removeClass("btn-warning").addClass("btn-default");
                    $(this).addClass("btn-warning");

                    $("#" + dataType).val($(this).attr("data-value"));

                    // 刷新 bootstrapTable
                    let refreshOptions = {
                        query:{
                            itemStatus: $("#itemStatus").val()
                        }
                    };
                    $resultListTable.bootstrapTable('refresh', refreshOptions);
                });


            }
        });
	});

    function refreshTotal($resultListTable) {
        let $allSelectionsData = $resultListTable.bootstrapTable('getAllSelections'),
            allSelectionsTotal = 0;

        $.each($allSelectionsData, function(i, val) { //两个参数，第一个参数表示遍历的数组的下标，第二个参数表示下标对应的值
            allSelectionsTotal += val.financingLoan.writeoffBalAmount + val.financingLoan.writeoffBalInterest + val.financingLoan.writeoffServiceBalCharge;
        });

        $("#total_static").html(formatCurrency(allSelectionsTotal, 2));
        $("#total").val(allSelectionsTotal);
    }

    // 基于准备好的dom，初始化echarts实例
    let pie_Chart = echarts.init(document.getElementById('pie_'));
    let line_Chart = echarts.init(document.getElementById('line_'));

    let pie_data = {
        value: <?php echo intval($this->financingItem['debtorPayAcct']['creditBal'] / $this->financingItem['debtorPayAcct']['creditLimit'] * 100); ?>,
        name: '完成率'
    };

    // 指定图表的配置项和数据
    let pie_option = {
        title: [{
            id: 'ti',
            text: pie_data.value + '%',
            x: '29%',
            y: '38%',
            textAlign: 'center',
            textStyle: {
                // fontWeight: 'bold',
                fontSize: 22,
                color: '#1A3B4C'
            }
        }, {
            id: 'ti2',
